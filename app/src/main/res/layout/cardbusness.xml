<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp">


    <androidx.cardview.widget.CardView

        app:cardElevation="5dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/editcv"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">



        <TextView

            android:textStyle="bold"
            android:id="@+id/namebuss"
            android:textColor="@color/tabcolour"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="55dp"
            android:text="Anant Bhati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/address"
            android:textColor="@color/toolbar"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="55dp"
            android:text="Greater Noida, within 5.5 KM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/km"
            android:textColor="@color/toolbar"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="55dp"
            android:text="Within 1.9 KM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:id="@+id/Purpose"
            android:textColor="@color/toolbar"
            android:textSize="14sp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:text="Coffee | Business | Friendship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="10dp"
            android:id="@+id/status"
            android:textColor="@color/toolbar"
            android:textSize="14sp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="20dp"
            android:text="Hi community! I am open to new connections&quot;ðŸ˜Š&quot;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/btnINV"
            android:layout_marginStart="210dp"
            android:textSize="13sp"
            android:textColor="@color/toolbar"
            android:text="+INVITE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView

        android:backgroundTint="@color/lightfornt"
        android:background="@drawable/editcv"
        android:layout_marginEnd="10dp"
        android:id="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_width="70dp"
        android:elevation="6dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>